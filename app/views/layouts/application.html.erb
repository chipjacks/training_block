<!DOCTYPE html>
<html>
  <head>
    <title>TrainingBlocks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/semantic-ui@2.3.1/dist/semantic.min.css' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="ui container">
      <div class="ui text menu">
        <%= link_to "Training Blocks", root_path, class: "item" %>
        <div class="right menu">
          <% if current_user %>
            <div class="item">
              Signed in as <%= current_user.email %>
            </div>
            <%= link_to "Account", edit_user_registration_path, class: 'item' %>
            <%= link_to "Logout", destroy_user_session_path, method: 'delete', class: 'item' %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: 'item' %>
            <%= link_to 'Sign in with Strava', user_strava_omniauth_authorize_path, class: 'item' %>
            <%= link_to 'Sign up', new_user_registration_path, class: 'item' %>
          <% end %>
        </div>
      </div>
      <% if notice %>
        <div class="ui info message">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>
      <% if alert %>
        <div class="ui warning message">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
