<!DOCTYPE html>
<html>
  <head>
    <title>Training Block</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="ui menu">
      <div class="ui container">
        <%= link_to image_tag("/trainingblock_small.png", class: "logo"), root_path, class: "item borderless" %>
        <div class="right menu">
          <% if current_user %>
            <div class="item borderless">
              Signed in as <%= current_user.email %>
            </div>
            <%= link_to "Logout", destroy_user_session_path, method: 'delete', class: 'item borderless' %>
          <% else %>
            <%= link_to 'Sign in with Strava', user_strava_omniauth_authorize_path, class: 'item borderless' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="ui container">
      <% if notice %>
        <div class="ui info message">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>
      <% if alert %>
        <div class="ui warning message">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
