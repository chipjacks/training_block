- content_for :head do
  = javascript_include_tag 'welcome', 'data-turbolinks-track' => 'reload'
  = stylesheet_link_tag 'welcome', media: 'all'

  %link{href: "https://cdn.jsdelivr.net/npm/semantic-ui@2.3.1/dist/semantic.min.css", rel: "stylesheet"}
  %script{src: "https://cdn.jsdelivr.net/npm/semantic-ui@2.3.1/dist/semantic.min.js"}

.column.expand{style: "height: 100%"}
  .row.collapse{style: "justify-content: center"}
    - if notice
      .ui.info.message
        %p.notice= notice
    - if alert
      .ui.warning.message
        %p.alert= alert

  .row.expand
    .column.expand{style: "justify-content: center; align-items: center; padding: 1rem;"}
      = image_tag('icon.svg', style: 'width: 50%; max-width: 170px;')
      = image_tag('logo.svg', style: 'width: 100%; max-width: 500px;')
      %h1.ui.disabled.centered.header{style: "font-weight: normal; margin-top: -10px"}
        Build your running fitness.
      = link_to 'Sign in with Strava', user_strava_omniauth_authorize_path, class: 'ui large orange button', style: 'margin-bottom: 1rem; margin-top: 3rem;'
